<!doctype html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="../assets/style.css" rel="stylesheet">
</head>

<body>
    <div class="block py-5 px-5">
        <p class="text-3xl font-extrabold text-center mb-8">Registasi Akun</p>
        <form action="/registrasi" method="POST">
            <div class="grid grid-cols-3 gap-3">
                <div class="py-1">
                    <label for="name" class="font-semibold">Nama Lengkap</label>
                </div>
                <div class="col-span-2">
                    <input type="text" id="name" name="name" class="form-control block w-full px-3 py-1 text-md font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-[#FE0000] focus:outline-none"
                        required>
                </div>
                <div class="py-1">
                    <label for="email" class="font-semibold">Email Aktif</label>
                </div>
                <div class="col-span-2">
                    <input type="email" id="email" name="email" class="form-control block w-full px-3 py-1 text-md font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-[#FE0000] focus:outline-none"
                        required>
                </div>
                <div class="py-1">
                    <label for="password" class="font-semibold">Password</label>
                </div>
                <div class="col-span-2">
                    <input type="password" id="password" name="password" class="form-control block w-full px-3 py-1 text-md font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-[#FE0000] focus:outline-none"
                        required>
                </div>
                <div class="py-1"></div>
                <div class="col-span-2">
                    <button type="submit" class="inline-block px-5 py-2 bg-[#FE0000] text-white font-medium text-sm leading-snug uppercase rounded shadow-md hover:bg-[#b61212] hover:shadow-lg focus:bg-[#b61212] focus:shadow-lg focus:outline-none focus:ring-0 active:bg-[#960e0e] active:shadow-lg transition duration-150 ease-in-out w-1/2"
                        data-mdb-ripple="true" data-mdb-ripple-color="light">Registrasi</button>
                </div>
            </div>
        </form>
    </div>
</body>

</html>